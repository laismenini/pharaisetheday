<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PhraseYourDay"
    android:id="@+id/android"
    android:background="@drawable/fundoazulsombreado">

    <TextView
        android:text="PhRaise It!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#80ffffff"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;It's not the load that breaks you down, it's the way you carry it&quot;"
        android:id="@+id/phrasetextView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Good Phrase"
        android:id="@+id/goodphrasebutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:background="#62c35b" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trash it!"
        android:id="@+id/trashitbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#c46363" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hernan"
        android:id="@+id/textView"
        android:layout_toEndOf="@+id/textView2"
        android:layout_below="@+id/phrasetextView"
        android:layout_alignRight="@+id/phrasetextView"
        android:layout_alignEnd="@+id/phrasetextView"
        android:gravity="right" />

</RelativeLayout>
