<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/fundorosasombreado">

    <TextView
        android:layout_width="1546dp"
        android:layout_height="wrap_content"
        android:text="Customize your own quote"
        android:id="@+id/customized_title"
        android:textSize="@dimen/customized_title"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="1546dp"
        android:layout_height="wrap_content"
        android:text="Phrase"
        android:id="@+id/customized_phrase_label"
        android:textSize="@dimen/customized_title"
        android:textColor="#ffffffff"
        android:layout_marginTop="@dimen/customized_title" />

    <EditText
        android:layout_width="1546dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/customized_phrase_input"
        android:layout_weight="0.30" />

    <TextView
        android:layout_width="1546dp"
        android:layout_height="wrap_content"
        android:text="Author"
        android:id="@+id/customized_author_label"
        android:textSize="@dimen/customized_title"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="1546dp"
        android:layout_height="wrap_content"
        android:id="@+id/customized_author_input"
        android:layout_weight="0.06" />

    <TextView
        android:layout_width="1546dp"
        android:layout_height="wrap_content"
        android:text="Category"
        android:id="@+id/customized_category_label"
        android:textSize="@dimen/customized_title"
        android:textColor="#ffffffff" />

    <Spinner
        android:layout_width="1546dp"
        android:layout_height="wrap_content"
        android:id="@+id/customized_category_spinner"
        android:layout_weight="0.11" />

    <Button
        android:layout_width="1226dp"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/customized_button_send" />

</LinearLayout>